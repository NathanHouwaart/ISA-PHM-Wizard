{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "TestSetUp",
    "type": "object",
    "properties": {
            "name": {
                "type": "string"
            },
            "location": {
                "type": "string"
            },
            "characteristics": {
                "type": "array",
                "items": {
                    "$ref": "#/definitions/Characteristic"
                }
            },
            "number_of_sensors": {
                "type": "integer"
            },
            "sensors": {
                "type": "array",
                "items": {
                    "$ref": "#/definitions/Sensor"
                }
            }
    },
    "required": [
        "name",
        "location",
        "characteristics",
        "number_of_sensors",
        "sensors"
    ],
    "definitions": {
        "Characteristic": {
                "type": "object",
                "properties": {
                    "category": {
                        "type": "string"
                    },
                    "value": {
                        "type": "string"
                    },
                    "unit": {
                        "type": "string"
                    },
                    "comments": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/Comment"
                        }
                    }
                },
                "required": ["category", "value"]
        },
        "Comment": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "value": {
                    "type": "string"
                }
            },
            "required": ["name"]
        },
         "Sensor": {
            "type": "object",
            "properties": {
                "identifier": {
                    "type": "string"
                },
                "measurement_type": {
                    "type": "string"
                },
                "measurement_unit": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "technology_type": {
                    "type": "string"
                },
                "technology_platform": {
                    "type": "string"
                },
                "data_acquisition_unit": {
                    "type": "string"
                },
                "sampling_rate": {
                    "type": "string"
                },
                "sampling_unit": {
                    "type": "string"
                },
                "sensor_location": {
                    "type": "string"
                },
                "location_unit": {
                    "type": "string"
                },
                "sensor_orientation": {
                    "type": "string"
                },
                "orientation_unit": {
                    "type": "string"
                }
            }
        }
    }
}